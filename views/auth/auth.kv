#:kivy 1.0.9

<Auth>:
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(24)
        padding: dp(24)
        canvas.before:
            Color:
                rgba: [1,1,1,1]
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'assets/imgs/bg-login.png'
        AnchorLayout:
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: .8
                size_hint_y: .7
                AnchorLayout:
                    anchor_y: 'bottom'
                    Image:
                        source: 'assets/imgs/logo-light.png'
                BoxLayout:
                    orientation: 'vertical'
                    spacing: dp(24)
                    Text:
                        text: 'POS System'
                        font_name: app.fonts.heading
                        font_size: app.fonts.size.extra
                        color: app.color_primary_text
                        halign: 'center'
                        valign: 'bottom'
                        size_hint_y: None
                        height: dp(54)
                    BoxLayout:
                        Label:
                            text: 'Teste de tela de login'
                            text_size: [self.parent.width, None]
                            font_name: app.fonts.subheading
                            font_size: sp(42)
                            size: self.texture_size
                            color: app.color_primary_text
                            halign: 'center'
                            valign: "top"


    BoxLayout:
        orientation: 'vertical'
        spacing: dp(12)
        BoxLayout:
            size_hint_y: .3
            orientation: 'vertical'
            Text:
                text: "Login"
                font_name: app.fonts.styled
                font_size: app.fonts.size.extra
                color: app.color_primary_text
                halign: 'center'
                valign: 'bottom'

            BoxLayout:
                Label:
                    text: "Enter your username and password to login"
                    text_size: [self.parent.width, None]
                    font_name: app.fonts.body
                    font_size: app.fonts.size.h3
                    size: self.texture_size
                    color: app.color_secondary_text
                    halign: 'center'
                    valign: "top"
        AnchorLayout:
            size_hint_y: .5
            BoxLayout:
                orientation: 'vertical'
                spacing: dp(24)
                padding: dp(24)
                size_hint_x: .7
                BackBox:
                    size_hint_y: None
                    height: dp(64)
                    bcolor: app.color_secondary_bg
                    radius: [self.height*.1]
                    padding: [dp(12), dp(2)]
                    FlatField:
                        id: username
                        hint_text: 'Username'
                        hint_text_color: app.color_primary_text
                        font_size: app.fonts.size.h2
                        multiline: False
                BackBox:
                    size_hint_y: None
                    height: dp(64)
                    bcolor: app.color_secondary_bg
                    radius: [self.height*.1]
                    padding: [dp(12), dp(2)]
                    FlatField:
                        id: password
                        hint_text: 'Password'
                        hint_text_color: app.color_primary_text
                        font_size: app.fonts.size.h2
                        multiline: False
                        password: True

                BackBox:
                    size_hint_y: None
                    height: dp(64)
                    RoundedButton:
                        text: 'Login'
                        font_name: app.fonts.heading
                        font_size: app.fonts.size.h1
                        bcolor: app.color_primary
                        radius: [self.height*.1]
                        on_release: root.authenticate()
                BackBox:
                    size_hint_y: None
                    height: dp(64)
                    FlatButton:
                        text: "Don't have an account? Sign up"
                        font_name: app.fonts.heading
                        font_size: app.fonts.size.h1
                        color: app.color_primary_text
                        radius: [self.height*.1]
                Widget:

        AnchorLayout:
            size_hint_y: .2
            padding: dp(24)
            Text:
                text: "Version 1.0.0"
                font_size: app.fonts.size.h2
                valign: 'bottom'