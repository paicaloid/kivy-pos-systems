#:kivy 1.0.9

<Auth>:
    BackBox:
        orientation: 'vertical'
        spacing: dp(24)
        padding: dp(24)
        canvas.before:
            Color:
                rgba: [1,1,1,1]
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'assets/imgs/bg-login.png'
        AnchorLayout:
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: .8
                size_hint_y: .7
                AnchorLayout:
                    anchor_y: 'bottom'
                    Image:
                        source: 'assets/imgs/logo-light.png'
                BoxLayout:
                    orientation: 'vertical'
                    spacing: dp(24)
                    Text:
                        text: 'POS System'
                        font_name: app.fonts.heading
                        font_size: sp(42)
                        color: app.color_primary_text
                        halign: 'center'
                        valign: 'bottom'
                        size_hint_y: .3
                    BoxLayout:
                        Label:
                            text: 'Teste de tela de login'
                            text_size: [self.parent.width, None]
                            font_name: app.fonts.subheading
                            font_size: sp(42)
                            size: self.texture_size
                            color: app.color_primary_text
                            halign: 'center'
                            valign: "top"


    BoxLayout:
        orientation: 'vertical'
