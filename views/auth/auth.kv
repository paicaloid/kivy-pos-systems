#:kivy 2.3.0

<Auth>:
    orientation: "horizontal"

    WelcomeModule:
    LoginModule:






<WelcomeModule>:
    canvas.before:
        Color:
            rgba: [1,1,1,1]
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'assets/imgs/bg-login.png'
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "center"
        Label:
            text: "Welcome to the app"



<LoginModule>:
    canvas.before:
        Color:
            rgba: [1,1,1,1]
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: "vertical"
    BoxLayout:
    BoxLayout:
        TextInput:
            id: username
            hint_text: "Username"
            multiline: False
            write_tab: False
            on_text: root.check_input()
    BoxLayout:
        TextInput:
            id: password
            hint_text: "Password"
            multiline: False
            write_tab: False
            on_text: root.check_input()
    BoxLayout:
        Button:
            text: "Login"
            disabled: root.login_btn_disabled
            on_press: root.authenticate()
    BoxLayout:
